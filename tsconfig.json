{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "isolatedModules": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "vitest/globals",
      "vite-svg-loader",
      "node"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "shared-types": ["backend/shared-types"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "cypress.config.ts",
    "./index.html",
    "knip.ts"
  ],
}
